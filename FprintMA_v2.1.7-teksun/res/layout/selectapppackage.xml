<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/id_enablelock_apps_sw_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F4F4F4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/id_manage_applunch_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:layout_marginLeft="6dp"
            android:textSize="15sp"
            android:text="@string/ma_quick_lauch_app" />

        <Button
            android:id="@+id/id_manage_applunch_confirm"
        	android:layout_width="100dp"
        	android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/sure"
            android:background="@drawable/digital_btn"
            android:layout_marginRight="3dp" />

        
        
    </LinearLayout>

    <ProgressBar
        android:layout_below="@id/id_enablelock_apps_sw_ll"
        android:id="@+id/id_enablelock_apps_pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="6dp" />

    <ListView
        android:id="@+id/id_lv_main"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/id_enablelock_apps_pb" />

</RelativeLayout>
